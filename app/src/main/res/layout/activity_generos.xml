<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211F20"
    tools:context=".ui.view.Generos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logoGeneros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/frameLogoGeneros"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cuerpoGeneros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="84dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollFrameGeneros"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Scrollable view Container">

                <LinearLayout
                    android:id="@+id/layoutBtnGeneros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/frameTituloGeneros"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5">
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameBlues"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameClasico"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frameFunk"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameGospel"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameJazz"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameRock"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameSoul"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">
                    </FrameLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>