<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.viewModel.metronomoPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerMetronomo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="7dp"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"

                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="T.S" />

                <TextView
                    android:id="@+id/txtCompas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="4/4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Tempo" />

                <TextView
                    android:id="@+id/txtTemCla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Allegro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtSubdiv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="SubdivisiÃ³n" />

                <ImageView
                    android:id="@+id/imgSubdiv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5"

                    android:src="@drawable/negra" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textBPM"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/textBPMnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="52dp"
                android:gravity="right"
                android:layout_weight="0.6"
                android:text="120" />
            <TextView
                android:id="@+id/txtbpmsiglas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_weight="0.4"
                android:text="\nbpm" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/repesentacionGraficaTempo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/bg_rounded_corners_metronomo"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/figR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="1"
                android:src="@drawable/negra" />
            <ImageView
                android:id="@+id/figR2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="1"
                android:src="@drawable/negra" />
            <ImageView
                android:id="@+id/figR3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="1"
                android:src="@drawable/negra" />
            <ImageView
                android:id="@+id/figR4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="1"
                android:src="@drawable/negra" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonesMetronomo"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnIniciarMetronomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="0.75"
                android:background="@drawable/bg_rounded_corners_btn_metronomo"
                android:text="Iniciar" />

            <Button
                android:id="@+id/btnTapMetronomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/bg_rounded_corners_btn_metronomo"
                android:text="tap" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>