<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211F20"
    tools:context=".ui.viewModel.resultadoSpotify">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCancion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginRight="12dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txtNombreArtista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GNR" />

            <TextView
                android:id="@+id/txtNombreCancion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="November Rain" />
            <TextView
                android:id="@+id/txtKeySong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eb Major" />

            <TextView
                android:id="@+id/txtBpmSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="153" />
            <TextView
                android:id="@+id/txtPopSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="77" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>