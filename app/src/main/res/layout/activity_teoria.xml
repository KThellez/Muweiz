<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211F20"
    tools:context=".Teoria">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logoTeoria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/frameLogoTeoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cuerpoTeoria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="84dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollFrameTeoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Scrollable view Container">

                <LinearLayout
                    android:id="@+id/layoutBtnTeoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/frameTituloTeoria"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5">
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameIntervalos"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameArmoniaI"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameEscalaModo"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameCadencia"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameAnalisisArmonico"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/frameVoicings251"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_corners">
                    </FrameLayout>


                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>