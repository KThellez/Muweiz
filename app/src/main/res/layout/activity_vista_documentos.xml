<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211F20"
    android:theme="@style/Theme.Design.NoActionBar"
    tools:context=".ui.viewModel.vista_documentos">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logoTeoria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLogoTeoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cuerpoTeoria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <ScrollView
                android:id="@+id/scrollFrameTeoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Scrollable view Container">

                <LinearLayout
                    android:id="@+id/layoutContenedorInformacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">





                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>