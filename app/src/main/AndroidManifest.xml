<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.Verification"
            android:exported="false" />
        <activity
            android:name=".ui.login.signin.SignIn"
            android:exported="false" />
        <activity
            android:name=".ui.login.login.Login"
            android:exported="false" />
        <activity
            android:name=".ui.login.login_register.login_register_Activity"
            android:exported="false" />
        <activity
            android:name=".ui.viewModel.vista_documentos"
            android:exported="false"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".ui.view.Splash"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.SpotifyRequest"
            android:exported="true"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="192.168.0.12"
                    android:pathPrefix="/callback"
                    android:port="8888"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.Instrumentos"
            android:exported="false" />
        <activity
            android:name=".ui.view.Generos"
            android:exported="false" />
        <activity
            android:name=".ui.view.Ejercicios"
            android:exported="false" />
        <activity
            android:name=".ui.view.Teoria"
            android:exported="false" />
        <activity
            android:name=".ui.view.Tuner"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.Metronomo"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>